FROM golang:1.25-alpine

WORKDIR /app

# Install git for module downloads
RUN apk add --no-cache git ca-certificates

# Copy Go module files and download dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy source code, proto files, and tracks
COPY main.go .  
COPY proto/ proto/
COPY tracks/ tracks/

# Build the binary
RUN CGO_ENABLED=0 GOOS=linux go build -o server .

# Expose gRPC port
EXPOSE 50051

# Run the server
CMD ["./server"]